{
    "python.defaultInterpreterPath":  "python",
    "python.testing.unittestArgs":  [
                                        "-v",
                                        "-s",
                                        "./agile_bot",
                                        "-p",
                                        "*test.py"
                                    ],
    "python.testing.pytestEnabled":  true,
    "python.testing.unittestEnabled":  false,
    "python.testing.pytestArgs":  [
                                      "-v",
                                      "--tb=short",
                                      "--continue-on-collection-errors"
                                  ],
    "python.testing.cwd":  "",
    "python.testing.autoTestDiscoverOnSaveEnabled":  true,
    "cursor.ai.autoAcceptFileWrites":  true,
    "cursor.general.autoAcceptFileWrites":  true,
    "github.copilot.chat.participants": {
        "story-bot": {
            "name": "story-bot",
            "description": "Story Bot - Agile story development assistant",
            "mcpServers": ["story_bot"]
        }
    },
    "github.copilot.chat.mcp.servers":  {
                                            "story_bot":  {
                                                              "command":  "python",
                                                              "args":  [
                                                                           "agile_bot/bots/story_bot/src/story_bot_mcp_server.py"
                                                                       ],
                                                              "cwd":  "${workspaceFolder}",
                                                              "env":  {
                                                                          "AGENT_NAME":  "story_bot",
                                                                          "PYTHONPATH":  "${workspaceFolder}",
                                                                          "BOT_DIRECTORY":  "${workspaceFolder}/agile_bot/bots/story_bot",
                                                                          "WORKING_AREA":  "${workspaceFolder}/demo/mob_minion"
                                                                      }
                                                          }
                                        }
}
